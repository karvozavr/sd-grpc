<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hse.banana.chat.ChatApp">
   <children>
      <VBox fx:id="chatBox" alignment="BOTTOM_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS" />
      <HBox fillHeight="false" VBox.vgrow="NEVER">
         <children>
            <TextField fx:id="textField" HBox.hgrow="ALWAYS" />
            <Button fx:id="sendButton" mnemonicParsing="false" onAction="#onSendButtonClick" text="Send" />
         </children>
      </HBox>
   </children>
</VBox>
